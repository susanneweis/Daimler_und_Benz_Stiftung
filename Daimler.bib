	date = {2020-09},
	pmid = {32590019},
	keywords = {Humans, Brain, Adult, Magnetic Resonance Imaging, Brain Mapping, {fMRI}, Comprehension, Language, Neural efficiency, Phonological processing, Reading, Sentence comprehension, Verbal intelligence},
	file = {Accepted Version:/Users/sweis/Zotero/storage/JAT45863/Weber et al. - 2020 - The relationship between language ability and brain activity across language processes and modalitie.pdf:application/pdf},
