	date = {2015-12-15},
	pmid = {26621705},
	pmcid = {PMC4687544},
	keywords = {Humans, Brain, Female, Male, Sex Characteristics, sex differences, Organ Size, behavior, Behavior, brain connectivity, brain structure, gender differences, Genitalia, Gray Matter},
	file = {Full Text:/Users/sweis/Zotero/storage/AVV6JDD3/Joel et al. - 2015 - Sex beyond the genitalia The human brain mosaic.pdf:application/pdf},
}

