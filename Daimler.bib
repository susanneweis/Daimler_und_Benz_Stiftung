	number = {3},
	journaltitle = {Neuropsychology},
	shortjournal = {Neuropsychology},
	author = {Hodgetts, Sophie and Weis, Susanne and Hausmann, Markus},
	date = {2017-03},
	pmid = {28054823},
	keywords = {Humans, Female, Adult, Young Adult, Emotions, Attention, Estradiol, Functional Laterality, Menstrual Cycle, Progesterone, Language, Auditory Perception, Dichotic Listening Tests, Saliva},
	file = {Accepted Version:/Users/sweis/Zotero/storage/D9RPPUFE/Hodgetts et al. - 2017 - Estradiol-related variations in top-down and bottom-up processes of cerebral lateralization.pdf:application/pdf},
}

